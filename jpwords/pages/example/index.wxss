}

/* 导航栏*/
.index-menu{
	width: 100%;
	display: -webkit-flex;
	display: -webkit-box;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	background: #fff;
}
.index-menu-item{
	-webkit-flex: 0 0 25%;
	-webkit-box-flex: 0;
	        flex: 0 0 25%;
	max-width: 25%;
	text-align: center;
	margin-top: 0rpx;
/* 	border-top: 1rpx solid #ddd;
	border-bottom: 1rpx solid #ddd;
	border-right: 1rpx solid #ddd; */
	padding: 15rpx 0rpx 15rpx 0rpx;
	box-sizing: border-box;
	margin-bottom: 0rpx;
}
.index-menu-item image{
	width: 80rpx;
	height: 50rpx;
  padding: 0px;
  margin: 0px;
}
.index-menu-item text{
	display: block;
	font-size: 30rpx;
	line-height: 0.4;
	white-space: nowrap;
  padding: 0px;
  margin: 0px;
}
